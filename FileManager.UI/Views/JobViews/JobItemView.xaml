<UserControl x:Class="FileManager.UI.Views.JobViews.JobItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FileManager.UI.Views.JobViews"
             xmlns:controls="clr-namespace:HBLibrary.Wpf.Controls;assembly=HBLibrary.Wpf"
             xmlns:attachedProperties="clr-namespace:HBLibrary.Wpf.AttachedProperties;assembly=HBLibrary.Wpf"
             xmlns:viewModels="clr-namespace:FileManager.UI.ViewModels.JobViewModels.JobStepViewModels"
             xmlns:views="clr-namespace:FileManager.UI.Views.JobViews.JobStepViews"
             xmlns:converters="clr-namespace:HBLibrary.Wpf.Converters;assembly=HBLibrary.Wpf"
             xmlns:behaviors="clr-namespace:HBLibrary.Wpf.Behaviors;assembly=HBLibrary.Wpf"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DesignHeight="500"
             d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            

            <BooleanToVisibilityConverter x:Key="b2v" />
            <converters:NullToVisibilityConverter x:Key="n2v" />
            <converters:GridViewColumnWidthConverter x:Key="GridViewColumnWidthConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer Style="{StaticResource PrimaryScrollViewer}"
                  attachedProperties:ScrollViewerAttachedProperties.ScrollOnMouseOver="True">

        <Grid Margin="10 10 10 0">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Vertical"
                        Grid.Row="0"
                        IsEnabled="{Binding IsInitialized, FallbackValue=False}">

                <TextBlock Style="{StaticResource HeaderTextBlock}"
                           Text="Properties"
                           Margin="0 0 0 10">
                </TextBlock>

                <Grid Margin="0 0 0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <controls:IconToggleButton Data="M16.56,5.44L15.11,6.89C16.84,7.94 18,9.83 18,12A6,6 0 0,1 12,18A6,6 0 0,1 6,12C6,9.83 7.16,7.94 8.88,6.88L7.44,5.44C5.36,6.88 4,9.28 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12C20,9.28 18.64,6.88 16.56,5.44M13,3H11V13H13"
                                               HorizontalAlignment="Left"
                                               HorizontalContentAlignment="Center"
                                               VerticalContentAlignment="Center"
                                               Width="30"
                                               Height="30"
                                               IconHeight="30"
                                               IconWidth="30"
                                               IsChecked="{Binding IsEnabled}"
                                               FromFill="#50c4fd"
                                               ToFill="#fd0000"
                                               FromShadowEffect="#50ffff"
                                               ToShadowEffect="#ff7676">
                        <controls:IconToggleButton.ShadowEffect>
                            <DropShadowEffect BlurRadius="5"
                                              Direction="0"
                                              ShadowDepth="0" />
                        </controls:IconToggleButton.ShadowEffect>
                    </controls:IconToggleButton>

                    <StackPanel Orientation="Vertical"
                                Grid.Column="1">

                        <TextBlock Style="{StaticResource NormalTextBlock}"
                                   Text="Name"
                                   Margin="0 0 0 3">
                        </TextBlock>
                        <TextBox Style="{StaticResource PrimaryTextBox}"
                                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}">
                        </TextBox>
                    </StackPanel>
                </Grid>
                <CheckBox Style="{StaticResource PrimaryCheckBox}"
                          IsChecked="{Binding OnDemand}"
                          Content="On Demand"
                          Margin="0 0 0 10"></CheckBox>
                <CheckBox Style="{StaticResource PrimaryCheckBox}"
                          IsChecked="{Binding Scheduled}"
                          Content="Scheduled"
                          Margin="0 0 0 10"></CheckBox>

                <TextBlock Style="{StaticResource NormalTextBlock}"
                           Text="Description"
                           Margin="0 0 0 3">
                </TextBlock>

                <TextBox Style="{StaticResource PrimaryTextBox}"
                         Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                         VerticalContentAlignment="Top"
                         Height="100"
                         Margin="0 0 0 10">
                </TextBox>
            </StackPanel>



            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Style="{StaticResource ControlBorder}"
                        Grid.Column="0"
                        Grid.Row="0"
                        IsEnabled="{Binding IsInitialized}">

                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock Style="{StaticResource HeaderTextBlock}"
                                   Text="Steps"
                                   Grid.Row="0">
                        </TextBlock>

                        <StackPanel Grid.Row="1"
                                    HorizontalAlignment="Left"
                                    Orientation="Horizontal">

                            <controls:IconButton BorderThickness="1"
                                                Height="24"
                                                Width="24"
                                                ToolTip="Add step"
                                                IconData="M20 14H14V20H10V14H4V10H10V4H14V10H20V14Z"
                                                IconFill="{StaticResource VSGreenBrush}"
                                                Command="{Binding AddStepCommand}">
                            </controls:IconButton>

                            <controls:IconButton BorderThickness="1"
                                                Visibility="{Binding SelectedStep, Converter={StaticResource n2v}}"
                                                ToolTip="Delete step"
                                                Height="24"
                                                Width="24"
                                                IconData="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                                                IconFill="{StaticResource VSRedBrush}"
                                                Command="{Binding DeleteStepCommand}"
                                                CommandParameter="{Binding SelectedStep}">
                            </controls:IconButton>

                            <controls:IconButton BorderThickness="1"
                                                Visibility="{Binding SelectedStep, Converter={StaticResource n2v}}"
                                                ToolTip="Validate step"
                                                Height="24"
                                                Width="24"
                                                IconHeight="18"
                                                IconStretch="Uniform"
                                                IconData="M11 15H6L13 1V9H18L11 23V15Z"
                                                IconFill="#ffac14"
                                                Command="{Binding ValidateStepCommand}"
                                                CommandParameter="{Binding SelectedStep}">

                            </controls:IconButton>
                        </StackPanel>

                        <TextBox Style="{StaticResource FilterTextBox}"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalAlignment="Top"
                                 Tag="Search Job Steps"
                                 Grid.Row="2">
                        </TextBox>

                        <ListView Style="{StaticResource PrimaryListView}"
                                  ItemsSource="{Binding StepsView}"
                                  SelectedItem="{Binding SelectedStep}"
                                  Grid.Row="3"
                                  AllowDrop="True">

                            <i:Interaction.Behaviors>
                                <behaviors:ListViewDragDropBehavior DragDropDataType="{x:Type viewModels:JobStepWrapperViewModel}" />
                            </i:Interaction.Behaviors>

                            <ListView.View>
                                <GridView AllowsColumnReorder="False">
                                    <GridViewColumn Width="55">
                                        <GridViewColumn.Header>
                                            <TextBlock Style="{StaticResource NormalTextBlock}"
                                                       FontWeight="Bold" />
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <controls:SlideToggleButton IsChecked="{Binding StepContext.IsEnabled}"
                                                                            CornerRadius="6"
                                                                            SliderCornerRadius="6"
                                                                            HorizontalAlignment="Left">

                                                </controls:SlideToggleButton>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="25">
                                        <GridViewColumn.Header>
                                            <TextBlock Style="{StaticResource NormalTextBlock}"
                                                       FontWeight="Bold" />
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <controls:AnimatedPath Data="M11 15H6L13 1V9H18L11 23V15Z"
                                                                       FromFill="#ffac14"
                                                                       ToFill="#888484"
                                                                       FromShadowEffect="#ffdf14"
                                                                       ToShadowEffect="Transparent"
                                                                       FromShadowBlurRadius="3"
                                                                       ToShadowBlurRadius="0"
                                                                       Height="20"
                                                                       State="{Binding StepContext.IsValid}">
                                                    <controls:AnimatedPath.ShadowEffect>
                                                        <DropShadowEffect ShadowDepth="0"
                                                                          Direction="0" />
                                                    </controls:AnimatedPath.ShadowEffect>
                                                </controls:AnimatedPath>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn DisplayMemberBinding="{Binding StepContext.Name}">
                                        <GridViewColumn.Header>
                                            <TextBlock Style="{StaticResource NormalTextBlock}"
                                                       FontWeight="Bold"
                                                       Text="Name" />
                                        </GridViewColumn.Header>
                                        <GridViewColumn.Width>
                                            <MultiBinding Converter="{StaticResource GridViewColumnWidthConverter}"
                                                          ConverterParameter="*">
                                                <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type ListView}}"
                                                         Path="ActualWidth" />
                                                <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type GridView}}" />
                                                <Binding RelativeSource="{RelativeSource Self}" />
                                            </MultiBinding>
                                        </GridViewColumn.Width>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>

                            <ListView.Resources>
                                <Style TargetType="GridViewHeaderRowPresenter">
                                    <Setter Property="Visibility"
                                            Value="Collapsed" />
                                </Style>

                                <ContextMenu x:Key="contextMenu"
                                             DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                             Style="{StaticResource PrimaryContextMenu}">
                                    <MenuItem Header="Delete step"
                                              Command="{Binding DeleteStepCommand}"
                                              CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}">

                                        <attachedProperties:MenuItemAttachedProperties.IconPath>
                                            <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                                                  Fill="{StaticResource VSRedBrush}"
                                                  Stretch="Uniform" />
                                        </attachedProperties:MenuItemAttachedProperties.IconPath>
                                    </MenuItem>
                                </ContextMenu>
                            </ListView.Resources>

                            <ListView.InputBindings>
                                <KeyBinding Key="Delete"
                                            Command="{Binding DeleteStepCommand}"
                                            CommandParameter="{Binding SelectedStep}" />
                            </ListView.InputBindings>

                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem"
                                       BasedOn="{StaticResource PrimaryListViewItem}">
                                    <Setter Property="ContextMenu"
                                            Value="{StaticResource contextMenu}" />
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ListView.ContextMenu>
                                <ContextMenu Style="{StaticResource PrimaryContextMenu}">
                                    <MenuItem Header="Add new step"
                                              Command="{Binding AddStepCommand}">
                                        <attachedProperties:MenuItemAttachedProperties.IconPath>
                                            <Path Data="M20 14H14V20H10V14H4V10H10V4H14V10H20V14Z"
                                                  Fill="{StaticResource VSGreenBrush}"
                                                  Stretch="Uniform" />
                                        </attachedProperties:MenuItemAttachedProperties.IconPath>
                                    </MenuItem>
                                </ContextMenu>
                            </ListView.ContextMenu>
                        </ListView>
                    </Grid>
                </Border>


                <ScrollViewer Style="{StaticResource PrimaryScrollViewer}"
                              IsEnabled="{Binding IsInitialized, FallbackValue=False}"
                              attachedProperties:ScrollViewerAttachedProperties.HorizontalScrollBarMargin="0 10 0 0"
                              attachedProperties:ScrollViewerAttachedProperties.ScrollOnMouseOver="True"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled"
                              Padding="0 0 20 10"
                              PanningMode="Both"
                              Grid.Row="0"
                              Grid.Column="1"
                              Margin="10 0 0 0"
                              Visibility="{Binding SelectedStep, Converter={StaticResource n2v}}">

                    <ContentControl Content="{Binding SelectedStep.StepView}" />
                </ScrollViewer>



                <Expander x:Name="ExpanderValidationLog"
                          Margin="0 5 0 0"
                          Style="{StaticResource PrimaryExpander}"
                          IsExpanded="{Binding ValidationLogVisible}"
                          ExpandDirection="Down"
                          Foreground="{StaticResource ForegroundBrush}"
                          Grid.Row="1"
                          Grid.ColumnSpan="2">
                    <Expander.Header>
                        <TextBlock Style="{StaticResource NormalTextBlock}"
                                   Text="Validation Log" />
                    </Expander.Header>

                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0"
                                    Visibility="{Binding IsExpanded, ElementName=ExpanderValidationLog, Converter={StaticResource b2v}}">
                            <controls:IconButton IconData="M5,13H19V11H5M3,17H17V15H3M7,7V9H21V7"
                                                IconFill="{StaticResource VSRedBrush}"
                                                BorderThickness="1"
                                                Width="25"
                                                Height="25"
                                                ToolTip="Clear log"
                                                IconWidth="20"
                                                IconStretch="Uniform"
                                                HorizontalAlignment="Left"
                                                Command="{Binding ClearValidationLogCommand}">

                            </controls:IconButton>
                        </StackPanel>

                        <RichTextBox Style="{StaticResource PrimaryRichTextBox}"
                                     Grid.Column="1"
                                     IsReadOnly="True"
                                     IsReadOnlyCaretVisible="True"
                                     FlowDirection="LeftToRight"
                                     attachedProperties:RichTextBoxAttachedProperties.BindableDocument="{Binding ValidationLog.Document}">
                        </RichTextBox>
                    </Grid>
                </Expander>
            </Grid>
        </Grid>
    </ScrollViewer>

</UserControl>
