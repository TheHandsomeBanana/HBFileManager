<Window x:Class="FileManager.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManager.UI"
        xmlns:viewModels="clr-namespace:FileManager.UI.ViewModels"
        xmlns:views="clr-namespace:FileManager.UI.Views"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:buttons="clr-namespace:HBLibrary.Wpf.Styles.Button;assembly=HBLibrary.Wpf"
        xmlns:nav="clr-namespace:HBLibrary.Wpf.Navigation;assembly=HBLibrary.Wpf"
        mc:Ignorable="d"
        Title="HB File Manager"
        x:Name="MainWindowApp"
        Height="720" 
        Width="1280"
        MinHeight="450"
        MinWidth="800"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" GlassFrameThickness="0" ResizeBorderThickness="5" CornerRadius="6" NonClientFrameEdges="None"/>
    </WindowChrome.WindowChrome>

    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HBLibrary.Wpf;component/Styles/DefaultDark.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/HBLibrary.Wpf;component/Styles/Button/Buttons.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/HBLibrary.Wpf;component/Styles/Border/Borders.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/HBLibrary.Wpf;component/Navigation/NavButtonStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closed">
            <i:InvokeCommandAction Command="{Binding WindowClosedCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Window.CommandBindings>
        <CommandBinding Command="{x:Static SystemCommands.CloseWindowCommand}" CanExecute="CommandBinding_CanExecute" Executed="CommandBinding_Executed_Close" />
        <CommandBinding Command="{x:Static SystemCommands.MaximizeWindowCommand}" CanExecute="CommandBinding_CanExecute" Executed="CommandBinding_Executed_Maximize" />
        <CommandBinding Command="{x:Static SystemCommands.MinimizeWindowCommand}" CanExecute="CommandBinding_CanExecute" Executed="CommandBinding_Executed_Minimize" />
        <CommandBinding Command="{x:Static SystemCommands.RestoreWindowCommand}" CanExecute="CommandBinding_CanExecute" Executed="CommandBinding_Executed_Restore" />
    </Window.CommandBindings>

    <Border x:Name="MainBorder"
            Style="{StaticResource VSCopy}"
            BorderThickness="1"
            CornerRadius="5"
            Background="{StaticResource HBDark_Background}">


        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Border BorderBrush="{StaticResource HBDark_Border}"
                    BorderThickness="0 0 0 1"
                    CornerRadius="5 5 0 0"
                    Background="{StaticResource HBDark_Background}"
                    Grid.ColumnSpan="2">
            </Border>

            <StackPanel Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Center" Orientation="Horizontal" Margin="10 0 0 0">
                <Path Stretch="Uniform" Fill="White" Height="16" Width="16" Data="M6 2C4.89 2 4 2.89 4 4V20A2 2 0 0 0 6 22H12.68A7 7 0 0 1 12 19A7 7 0 0 1 19 12A7 7 0 0 1 20 12.08V8L14 2H6M13 3.5L18.5 9H13V3.5M18 14C17.87 14 17.76 14.09 17.74 14.21L17.55 15.53C17.25 15.66 16.96 15.82 16.7 16L15.46 15.5C15.35 15.5 15.22 15.5 15.15 15.63L14.15 17.36C14.09 17.47 14.11 17.6 14.21 17.68L15.27 18.5C15.25 18.67 15.24 18.83 15.24 19C15.24 19.17 15.25 19.33 15.27 19.5L14.21 20.32C14.12 20.4 14.09 20.53 14.15 20.64L15.15 22.37C15.21 22.5 15.34 22.5 15.46 22.5L16.7 22C16.96 22.18 17.24 22.35 17.55 22.47L17.74 23.79C17.76 23.91 17.86 24 18 24H20C20.11 24 20.22 23.91 20.24 23.79L20.43 22.47C20.73 22.34 21 22.18 21.27 22L22.5 22.5C22.63 22.5 22.76 22.5 22.83 22.37L23.83 20.64C23.89 20.53 23.86 20.4 23.77 20.32L22.7 19.5C22.72 19.33 22.74 19.17 22.74 19C22.74 18.83 22.73 18.67 22.7 18.5L23.76 17.68C23.85 17.6 23.88 17.47 23.82 17.36L22.82 15.63C22.76 15.5 22.63 15.5 22.5 15.5L21.27 16C21 15.82 20.73 15.65 20.42 15.53L20.23 14.21C20.22 14.09 20.11 14 20 14H18M19 17.5C19.83 17.5 20.5 18.17 20.5 19C20.5 19.83 19.83 20.5 19 20.5C18.16 20.5 17.5 19.83 17.5 19C17.5 18.17 18.17 17.5 19 17.5Z"/>
                <TextBlock Text="HB File Manager"
                           FontFamily="Bahnschrift SemiBold"
                               Margin="10,0,0,0" 
                               Foreground="White" FontSize="16"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1"
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center">
                <Button x:Name="MinimizeButton"
                            Style="{StaticResource MinimizeButton}" 
                            WindowChrome.IsHitTestVisibleInChrome="True"
                            ToolTip="Minimize"
                            Command="{x:Static SystemCommands.MinimizeWindowCommand}"/>
                <Button x:Name="RestoreButton"
                            Style="{StaticResource RestoreButton}" 
                            WindowChrome.IsHitTestVisibleInChrome="True" 
                            ToolTip="Restore"
                            Visibility="Collapsed"
                            Command="{x:Static SystemCommands.RestoreWindowCommand}"/>
                <Button x:Name="MaximizeButton"
                            Style="{StaticResource MaximizeButton}" 
                            WindowChrome.IsHitTestVisibleInChrome="True" 
                            ToolTip="Maximize"
                            Visibility="Visible"
                            Command="{x:Static SystemCommands.MaximizeWindowCommand}"/>
                <Button x:Name="CloseButton"
                            buttons:ButtonAttachedProperties.CornerRadius="0 5 0 0"
                            Style="{StaticResource CloseButtonRed}" 
                            Width="50"
                            WindowChrome.IsHitTestVisibleInChrome="True" 
                            ToolTip="Close"
                            Command="{x:Static SystemCommands.CloseWindowCommand}"/>
            </StackPanel>

            <Border BorderBrush="{StaticResource HBDark_Border}" Grid.Column="0" Grid.Row="1"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                BorderThickness="0 0 1 0">

                <ListBox x:Name="sidebar" Background="Transparent" BorderThickness="0" ItemsSource="{Binding NavButtons}" SelectedItem="{Binding CurrentPageSelection}">
                    <buttons:ListBoxButton Text="Explorer"
                                           Icon="M10,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8C22,6.89 21.1,6 20,6H12L10,4Z"
                                           IconWidth="25"
                                           IconHeight="25"
                                           Height="80"
                                           Foreground="White"
                                           Background="Transparent"
                                           SelectedBackground="{StaticResource HBDark_Border}"
                                           HorizontalAlignment="Stretch"
                                           IconFill="#f1c23c"
                                           Command="{Binding NavigateToExplorer}">
                    </buttons:ListBoxButton>
                    <buttons:ListBoxButton Text="Scripting"
                                           Icon="M14.6,16.6L19.2,12L14.6,7.4L16,6L22,12L16,18L14.6,16.6M9.4,16.6L4.8,12L9.4,7.4L8,6L2,12L8,18L9.4,16.6Z"
                                           IconWidth="25"
                                           IconHeight="25"
                                           Height="80"
                                           Foreground="White"
                                           Background="Transparent"
                                           SelectedBackground="{StaticResource HBDark_Border}"
                                           HorizontalAlignment="Stretch"
                                           IconFill="#5DADE2"
                                           Command="{Binding NavigateToScripting}">      
                    </buttons:ListBoxButton>
                    <buttons:ListBoxButton Text="Execution"
                                           Icon="M8.5,8.64L13.77,12L8.5,15.36V8.64M6.5,5V19L17.5,12"
                                           IconWidth="25"
                                           IconHeight="25"
                                           Height="80"
                                           Foreground="White"
                                           Background="Transparent"
                                           SelectedBackground="{StaticResource HBDark_Border}"
                                           HorizontalAlignment="Stretch"
                                           IconFill="#8ae28a"
                                           Command="{Binding NavigateToExecution}">
                    </buttons:ListBoxButton>
                    <buttons:ListBoxButton Text="Settings"
                                           Icon="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"
                                           IconWidth="25"
                                           IconHeight="25"
                                           Height="80"
                                           Foreground="White"
                                           Background="Transparent"
                                           SelectedBackground="{StaticResource HBDark_Border}"
                                           HorizontalAlignment="Stretch"
                                           IconFill="#cdd5e0"
                                           Command="{Binding NavigateToSettings}">
                    </buttons:ListBoxButton>
                    <buttons:ListBoxButton Text="Application Log"
                                           Icon="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H13C12.59,21.75 12.2,21.44 11.86,21.1C9.22,18.67 9.05,14.56 11.5,11.92C13.69,9.5 17.33,9.13 20,11V8L14,2M13,9V3.5L18.5,9H13M20.31,18.9C21.64,16.79 21,14 18.91,12.68C16.8,11.35 14,12 12.69,14.08C11.35,16.19 12,18.97 14.09,20.3C15.55,21.23 17.41,21.23 18.88,20.32L22,23.39L23.39,22L20.31,18.9M16.5,19A2.5,2.5 0 0,1 14,16.5A2.5,2.5 0 0,1 16.5,14A2.5,2.5 0 0,1 19,16.5A2.5,2.5 0 0,1 16.5,19Z"
                                           IconWidth="25"
                                           IconHeight="25"
                                           Height="80"
                                           Foreground="White"
                                           Background="Transparent"
                                           SelectedBackground="{StaticResource HBDark_Border}"
                                           HorizontalAlignment="Stretch"
                                           IconFill="#cdd5e0"
                                           Command="{Binding NavigateToApplicationLog}">
                    </buttons:ListBoxButton>
                    <buttons:ListBoxButton Text="About"
                                           Icon="M11,9H13V7H11M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M11,17H13V11H11V17Z"
                                           IconWidth="25"
                                           IconHeight="25"
                                           Height="80"
                                           Foreground="White"
                                           Background="Transparent"
                                           SelectedBackground="{StaticResource HBDark_Border}"
                                           HorizontalAlignment="Stretch"
                                           IconFill="#1d7ccc"
                                           Command="{Binding NavigateToAbout}">
                    </buttons:ListBoxButton>
                </ListBox>
            </Border>

            <ContentControl Content="{Binding CurrentViewModel}" Grid.Column="1" Grid.Row="1">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type viewModels:ExplorerViewModel}">
                        <views:ExplorerView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewModels:ScriptingViewModel}">
                        <views:ScriptingView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewModels:ExecutionViewModel}">
                        <views:ExecutionView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewModels:SettingsViewModel}">
                        <views:SettingsView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewModels:ApplicationLogViewModel}">
                        <views:ApplicationLogView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewModels:AboutViewModel}">
                        <views:AboutView/>
                    </DataTemplate>
                    
                </ContentControl.Resources>
            </ContentControl>
        </Grid>
    </Border>
</Window>
